                                <label class="col-lg-4 control-label">Personel Adı</label>
                                <div class="col-lg-8">

                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="col-lg-4 control-label">Personel İletişim</label>
                                <div class="col-lg-8">

                                    <input type="text" class="form-control">
