                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">   <button class="btn-flat  btn-success  ti-plus" data-toggle="modal" data-target="#myModal">EKLE</button></li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->

            </div>

            <!-- /# row -->
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="bootstrap-data-table-panel">
                                <div class="table-responsive">
                                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th class="ti-list"></th>
                                                <th>Seri Numarası</th>
                                                <th>Sorumlu</th>
                                                <th>Kategori</th>
                                                <th>Marka</th>
                                                <th>Kayıt Tarihi</th>
                                                <th>Adet</th>
                                                <th>İşlem</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>Seri Numarası</td>
                                                <td>Sorumlu</td>
                                                <td>Kategori</td>
                                                <td>Marka</td>
                                                <td>Kayıt Tarihi</td>
                                                <td>Adet</td>
                                                <td>
                                                    <button class="btn-flat  btn-warning ti-pencil" onclick="location.href='@Url.Action("ProductUpdate", "Product")';return false;"></button>
                                                    <button class="btn-flat  btn-info ti-info" data-toggle="modal" data-target=".bd-example-modal-sm"></button>
                                                    <button class="btn-flat btn-danger  sweet-confirm ti-trash "></button>



                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- /# card -->
                    </div>
                    <!-- /# column -->
                </div>
            </section>
        </div>
    </div>
</div>

<!-- sidebar -->
<div aria-hidden="true" role="dialog" tabindex="-1" id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content text-left">
            <div class="modal-header">
                <h4 class="Sub-heading">Yeni Demirbaş</h4>
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"><i class="ti-close"></i></button>

            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">

                                <label class="col-lg-4 control-label">Seri Numarası</label>
                                <div class="col-lg-8">

                                    <input type="text" class="form-control" placeholder="Seri numarası">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Adedi</label>
                                <div class="col-lg-8">
                                    <select class="form-control">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-4 control-label">Garanti Tarihi</label>
                                <div class="col-lg-8">

                                    <input class="form-control" type="date">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Kategori</label>
                                <div class="col-lg-8">
                                    <select class="form-control">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Ürün Fotoğrafı</label>
                                <div class="col-lg-8">
                                    <input class="form-control" type="file">
                                </div>
                            </div>



                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Marka</label>
                                <div class="col-lg-8">
                                    <input class="form-control" type="text" placeholder="Marka giriniz...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Demirbaş Sorumlusu</label>
                                <div class="col-lg-8">

                                    <select class="form-control">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Servis İletişim</label>
                                <div class="col-lg-8">

                                    <input class="form-control" type="text" placeholder="İletişim bilgisi giriniz...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Açıklama</label>
                                <div class="col-lg-8">

                                    <textarea class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-5 col-lg-7">
                                    @*<span class="btn green fileinput-button">
                                            <i class="fa fa-plus fa fa-white"></i>
                                            <span>Attachment</span>
                                            <input type="file" name="files[]" multiple="">
                                        </span>*@
                                    <button class="btn btn-danger" type="submit"> Listeye Dön </button>
                                    <button class="btn btn-primary" type="submit"> Ekle </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



